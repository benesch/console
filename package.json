{
  "name": "cloud-frontend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "proxy": "cd frontend && PROXY_STACK=${PROXY_STACK:-staging} webpack serve --config=webpack.dev.ts",
    "start": "cd frontend && webpack serve --config=webpack.dev.ts",
    "build": "cd frontend && NODE_ENV=production webpack --config=webpack.prod.ts",
    "build:analyze": "BUNDLE_ANALYZE=1 yarn build",
    "test:unit": "cd frontend && jest",
    "test:e2e": "cd e2e-tests && DEBUG=pw:api playwright test",
    "eslint": "eslint --ignore-path .gitignore --max-warnings 0 .",
    "eslint:fix": "eslint --ignore-path .gitignore --fix .",
    "playwright": "playwright",
    "pyright": "pyright",
    "gavi": "gavi",
    "gen:api": "cd api && openapi-typescript '*.yml' --output ../frontend/src/api/schemas/",
    "gen:sourcemap": "cd frontend && NODE_ENV=production SOURCE_MAPS=true APP_HOSTNAME=materialize.example.com PROVISION_HOSTNAME=mzcloud.example.com FRONTEGG_URL=frontegg.example.com CLOUD_REGIONS=[] GIT_SHA=$SENTRY_RELEASE webpack --config=webpack.prod.ts",
    "dev:mock:prometheus": "python bin/prometheus-mock-server.py",
    "concurrently": "concurrently"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.17",
    "@chakra-ui/modal": "^1.10.10",
    "@chakra-ui/popover": "^1.11.6",
    "@chakra-ui/react": "^1.8.7",
    "@chakra-ui/toast": "^1.5.7",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.8.1",
    "@fontsource/inter": "^4.5.14",
    "@frontegg/react": "^5.0.9",
    "@melloware/csp-webpack-plugin": "^6.0.4",
    "@segment/analytics-next": "^1.45.0",
    "@sentry/react": "^7.14.2",
    "@sentry/tracing": "^7.14.1",
    "@sentry/webpack-plugin": "^1.18.8",
    "@types/codemirror": "^5.60.5",
    "@types/mini-css-extract-plugin": "^2.4.0",
    "@types/react-table": "^7.7.12",
    "@types/semver": "^7.3.13",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "codemirror": "^5.65.8",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.5.1",
    "d3-scale-chromatic": "^3.0.0",
    "date-fns": "^2.29.3",
    "dayzed": "^3.2.2",
    "deep-eql": "^4.1.1",
    "downloadjs": "^1.4.7",
    "formik": "^2.2.9",
    "framer-motion": "^5.6.0",
    "mini-css-extract-plugin": "^2.6.1",
    "openapi-typescript-fetch": "^1.1.3",
    "react": "^17.0.2",
    "react-codemirror2": "^7.2.1",
    "react-dom": "^17.0.2",
    "react-ga": "^3.3.0",
    "react-icons": "^4.3.1",
    "react-router-dom": "^5.3.0",
    "react-select": "^5.4.0",
    "react-table": "^7.8.0",
    "recoil": "^0.7.2",
    "semver": "^7.3.8",
    "stream": "^0.0.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.6.4",
    "unstated-next": "^1.1.0",
    "victory": "^36.6.5",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^4.9.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.24.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.8",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/deep-eql": "^4.0.0",
    "@types/downloadjs": "1.4.3",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.21",
    "@types/pg": "^8.6.3",
    "@types/react": "^17.0.42",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.16.0",
    "cacheable-lookup": "6.0.4",
    "concurrently": "7.0.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "extract-zip": "^2.0.1",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "gavi": "^0.2.2",
    "html-webpack-plugin": "^5.5.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^27.0.5",
    "miragejs": "^0.1.45",
    "openapi-typescript": "^5.4.1",
    "pg": "^8.7.1",
    "prettier": "^2.5.1",
    "pyright": "1.1.278",
    "react-refresh": "^0.11.0",
    "ts-jest": "^27.1.0",
    "typescript-eslint-language-service": "^5.0.0",
    "webpack-dev-server": "^4.8.1"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "prettier",
      "import",
      "simple-import-sort",
      "@typescript-eslint",
      "react"
    ],
    "ignorePatterns": [
      "frontend/src/api/schemas",
      "vendor"
    ],
    "settings": {
      "react": {
        "version": "detect",
        "formComponents": [
          "Formik"
        ]
      }
    },
    "rules": {
      "prettier/prettier": "error",
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "@typescript-eslint/no-shadow": [
        "error"
      ],
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "args": "none",
          "argsIgnorePattern": "^_",
          "destructuredArrayIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "react/display-name": "off",
      "react/function-component-definition": [
        2,
        {
          "namedComponents": "arrow-function"
        }
      ],
      "react/prop-types": "off",
      "react/jsx-curly-brace-presence": [
        1,
        {
          "props": "never",
          "children": "never",
          "propElementValues": "always"
        }
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not ie 11",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "volta": {
    "node": "14.19.0",
    "yarn": "1.22.17"
  }
}
